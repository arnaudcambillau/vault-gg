{% extends 'base_app.html.twig' %}

{% block title %}Ma Biblioth√®que - Vault.gg{% endblock %}

{% block content %}

<!-- Messages flash -->
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div data-flash
            class="p-4 rounded-lg mb-4
            {% if label == 'success' %}bg-green-500/20 border border-green-500/30 text-green-400{% endif %}
            {% if label == 'error' %}bg-red-500/20 border border-red-500/30 text-red-400{% endif %}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}


<!-- Header -->
<header class="mb-6">
    <h1 class="text-3xl font-black mb-2 flex items-center gap-3">
        <i data-lucide="library" class="w-9 h-9 text-indigo-500"></i>
        Ma Biblioth√®que
    </h1>
    <p class="text-slate-400">G√©rez votre collection de jeux vid√©o</p>
</header>

<!-- Filtres -->
<section class="glass rounded-2xl p-5 mb-6">
    <form method="get" action="{{ path('app_home') }}">
        <div class="flex gap-3 items-end flex-wrap">
            
            <!-- Filtre par statut -->
            <div class="flex-1 min-w-[200px]">
                <label class="block text-xs font-semibold text-slate-400 mb-1.5 uppercase">
                    <i data-lucide="filter" class="w-3.5 h-3.5 inline align-middle"></i>
                    Statut
                </label>
                <select
                    class="w-full bg-white dark:bg-slate-800/80 
                        border border-slate-300 dark:border-indigo-500/30 
                        rounded-lg px-3 py-2 
                        text-slate-900 dark:text-slate-100 
                        cursor-pointer 
                        focus:outline-none focus:ring-2 focus:ring-indigo-500/50"
>
                    <option value="all" {% if statusFilter == 'all' %}selected{% endif %}>üìö Tous les statuts</option>
                    <option value="backlog" {% if statusFilter == 'backlog' %}selected{% endif %}>‚è≥ √Ä commencer</option>
                    <option value="in_progress" {% if statusFilter == 'in_progress' %}selected{% endif %}>üéÆ En cours</option>
                    <option value="completed" {% if statusFilter == 'completed' %}selected{% endif %}>‚úÖ Termin√©</option>
                </select>
            </div>

            <!-- Filtre par genre -->
            <div class="flex-1 min-w-[200px]">
            <label class="block text-xs font-semibold text-slate-400 mb-1.5 uppercase">
                    <i data-lucide="tag" class="w-3.5 h-3.5 inline align-middle"></i>
                    Genre
                </label>
                <select 
                    class="w-full bg-white dark:bg-slate-800/80 
                        border border-slate-300 dark:border-indigo-500/30 
                        rounded-lg px-3 py-2 
                        text-slate-900 dark:text-slate-100 
                        cursor-pointer 
                        focus:outline-none focus:ring-2 focus:ring-indigo-500/50">
                    <option value="all" {% if genreFilter == 'all' %}selected{% endif %}>üéØ Tous les genres</option>
                    {% for genre in allGenres %}
                        <option value="{{ genre }}" {% if genreFilter == genre %}selected{% endif %}>{{ genre }}</option>
                    {% endfor %}
                </select>
            </div>

            <!-- Boutons -->
            <div class="flex gap-2">
                <button 
                    type="submit" 
                    class="bg-gradient-to-br from-indigo-500 to-violet-500 text-white px-5 py-2 rounded-lg font-semibold flex items-center gap-2 whitespace-nowrap hover:-translate-y-0.5 transition-all duration-300"
                >
                    <i data-lucide="check" class="w-4 h-4"></i>
                    <span class="hidden sm:inline">Appliquer</span>
                </button>
                <a 
                    href="{{ path('app_home') }}" 
                    class="bg-slate-500/20 text-slate-400 px-5 py-2 rounded-lg border border-slate-500/30 font-semibold flex items-center gap-2 whitespace-nowrap hover:bg-slate-500/30 transition-all duration-300"
                >
                    <i data-lucide="x" class="w-4 h-4"></i>
                    <span class="hidden sm:inline">R√©initialiser</span>
                </a>
            </div>
        </div>
    </form>
</section>

<!-- Compteur de r√©sultats filtr√©s -->
{% if statusFilter != 'all' or genreFilter != 'all' %}
    <div class="mb-5 p-3 bg-indigo-500/10 border border-indigo-500/20 rounded-lg flex items-center gap-2">
        <i data-lucide="info" class="w-4.5 h-4.5 text-indigo-400"></i>
        <span class="text-indigo-400 font-semibold text-sm">
            {{ userGames|length }} jeu{% if userGames|length > 1 %}x{% endif %} trouv√©{% if userGames|length > 1 %}s{% endif %} avec les filtres actifs
        </span>
    </div>
{% endif %}

{% if userGames|length > 0 %}
    
    <!-- Grille de jeux -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5 mb-10">
        
        {% for userGame in userGames %}
            {% set game = userGame.game %}
            
            <article class="glass rounded-2xl p-4 relative hover:-translate-y-1 transition-all duration-300">
                
                <!-- Bouton Favori (coin sup√©rieur droit) -->
                <form method="post" action="{{ path('app_home_toggle_favorite', {'id': userGame.id}) }}" class="absolute top-3 right-3 z-10">
                    <button 
                        type="submit" 
                        class="backdrop-blur-xl border rounded-full w-11 h-11 flex items-center justify-center cursor-pointer hover:scale-110 transition-transform duration-300
                            {% if userGame.isFavorite %}
                                bg-red-500/20 border-red-500/40
                            {% else %}
                                bg-slate-800/90 border-indigo-500/30
                            {% endif %}"
                    >
                        <i data-lucide="heart" class="w-6 h-6 
                            {% if userGame.isFavorite %}
                                text-red-500
                            {% else %}
                                text-slate-400
                            {% endif %}" 
                            {% if userGame.isFavorite %}style="fill: currentColor; stroke: currentColor;"{% endif %}
                        ></i>
                    </button>
                </form>

                <!-- Image du jeu -->
                {% if game.backgroundImage %}
                    <img 
                        src="{{ game.backgroundImage }}" 
                        alt="{{ game.name }}"
                        class="w-full h-40 object-cover rounded-lg mb-3"
                    >
                {% else %}
                    <div class="w-full h-40 bg-indigo-500/20 rounded-lg flex items-center justify-center mb-3">
                        <i data-lucide="gamepad-2" class="w-12 h-12 text-indigo-400"></i>
                    </div>
                {% endif %}

                <!-- Titre du jeu -->
                <h3 class="text-base font-bold text-slate-100 mb-2 line-clamp-2">
                    {{ game.name }}
                </h3>

                <!-- Note et Statut -->
                <div class="flex flex-wrap gap-2 mb-2">
                    
                    <!-- Note -->
                    {% if game.rating %}
                        <span class="bg-amber-500/20 text-amber-400 px-2 py-1 rounded text-xs font-semibold flex items-center gap-1">
                            <i data-lucide="star" class="w-3 h-3" style="fill: currentColor;"></i>
                            {{ game.rating }}/5
                        </span>
                    {% endif %}

                    <!-- Statut -->
                    {% if userGame.status == 'backlog' %}
                        <span class="bg-slate-500/20 text-slate-400 px-2 py-1 rounded text-xs font-semibold flex items-center gap-1">
                            <i data-lucide="clock" class="w-3 h-3"></i>
                            Backlog
                        </span>
                    {% elseif userGame.status == 'in_progress' %}
                        <span class="bg-amber-500/20 text-amber-400 px-2 py-1 rounded text-xs font-semibold flex items-center gap-1">
                            <i data-lucide="play-circle" class="w-3 h-3"></i>
                            En cours
                        </span>
                    {% elseif userGame.status == 'completed' %}
                        <span class="bg-emerald-500/20 text-emerald-400 px-2 py-1 rounded text-xs font-semibold flex items-center gap-1">
                            <i data-lucide="check-circle" class="w-3 h-3"></i>
                            Termin√©
                        </span>
                    {% endif %}
                </div>

                <!-- Date de sortie et ajout√© le -->
                <div class="text-slate-400 text-xs mb-3 space-y-1">
                    {% if game.released %}
                        <div class="flex items-center gap-1">
                            <i data-lucide="calendar" class="w-3 h-3"></i>
                            Sortie : {{ game.released|date('Y') }}
                        </div>
                    {% endif %}
                    <div class="flex items-center gap-1">
                        <i data-lucide="plus-circle" class="w-3 h-3"></i>
                        Ajout√© le {{ userGame.addedAt|date('d/m/Y') }}
                    </div>
                </div>

                <!-- Genres -->
                {% if game.genres %}
                    <div class="mb-3 flex flex-wrap gap-1">
                        {% for genre in game.genres %}
                            <span class="bg-indigo-500/10 text-indigo-400 px-2 py-0.5 rounded text-[10px] font-medium">
                                {{ genre }}
                            </span>
                        {% endfor %}
                    </div>
                {% endif %}

                <!-- Actions (Changer statut + Supprimer) -->
                <div class="flex gap-2 mb-2">
                    
                    <!-- Select pour changer le statut -->
                    <form method="post" action="{{ path('app_home_change_status', {'id': userGame.id}) }}" class="flex-1">
                        <select 
                            name="status" 
                            onchange="this.form.submit()"
                            class="w-full bg-indigo-500/20 text-indigo-400 px-2 py-2 rounded-lg border border-indigo-500/30 cursor-pointer text-xs font-semibold focus:outline-none focus:ring-2 focus:ring-indigo-500/50"
                        >
                            <option value="backlog" {% if userGame.status == 'backlog' %}selected{% endif %}>‚è≥ √Ä commencer</option>
                            <option value="in_progress" {% if userGame.status == 'in_progress' %}selected{% endif %}>üéÆ En cours</option>
                            <option value="completed" {% if userGame.status == 'completed' %}selected{% endif %}>‚úÖ Termin√©</option>
                        </select>
                    </form>
                    
                    <!-- Bouton Supprimer -->
                    <form 
                        method="post" 
                        action="{{ path('app_home_delete_game', {'id': userGame.id}) }}" 
                        onsubmit="return confirm('√ätes-vous s√ªr de vouloir retirer ¬´ {{ game.name }} ¬ª de votre biblioth√®que ?');"
                    >
                        <button 
                            type="submit" 
                            class="bg-red-500/20 text-red-400 px-3 py-2 rounded-lg border border-red-500/30 font-semibold flex items-center justify-center gap-1.5 text-xs hover:bg-red-500/30 transition-all duration-300"
                        >
                            <i data-lucide="trash-2" class="w-3.5 h-3.5"></i>
                            <span class="hidden sm:inline">Supprimer</span>
                        </button>
                    </form>
                </div>

                <!-- Bouton Voir les avis -->
                <a href="{{ path('app_game_reviews', {'rawgId': game.rawgId}) }}" 
                    class="w-full bg-violet-500/20 text-violet-400 px-3 py-2 rounded-lg border border-violet-500/30 font-semibold flex items-center justify-center gap-1.5 text-xs hover:bg-violet-500/30 transition-all duration-300">
                    <i data-lucide="message-circle" class="w-3.5 h-3.5"></i>
                    Voir les avis
                </a>

            </article>
        {% endfor %}
    </div>

{% else %}
    
    <!-- √âtat vide (biblioth√®que vide ou filtres sans r√©sultats) -->
    <section class="glass rounded-2xl p-12 text-center">
        <i data-lucide="library" class="w-16 h-16 text-indigo-500 mx-auto mb-4"></i>
        <p class="text-slate-400 text-lg mb-4">
            {% if statusFilter != 'all' or genreFilter != 'all' %}
                Aucun jeu ne correspond aux filtres s√©lectionn√©s.
            {% else %}
                Votre biblioth√®que est vide pour le moment.
            {% endif %}
        </p>
        <p class="text-slate-400 mb-6">
            {% if statusFilter != 'all' or genreFilter != 'all' %}
                Essayez de modifier vos filtres ou ajoutez de nouveaux jeux !
            {% else %}
                Utilisez la barre de recherche pour ajouter vos premiers jeux !
            {% endif %}
        </p>
        <a 
            href="{% if statusFilter != 'all' or genreFilter != 'all' %}{{ path('app_home') }}{% else %}{{ path('app_search') }}{% endif %}"
            class="inline-flex items-center gap-2 bg-gradient-to-br from-indigo-500 to-violet-500 text-white px-6 py-3 rounded-lg font-semibold hover:-translate-y-0.5 hover:shadow-lg hover:shadow-indigo-500/40 transition-all duration-300"
        >
            {% if statusFilter != 'all' or genreFilter != 'all' %}
                <i data-lucide="x" class="w-5 h-5"></i>
                R√©initialiser les filtres
            {% else %}
                <i data-lucide="search" class="w-5 h-5"></i>
                Rechercher des jeux
            {% endif %}
        </a>
    </section>

{% endif %}

{% endblock %}