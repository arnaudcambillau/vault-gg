{% extends 'base_app.html.twig' %}

{% block title %}Ma BibliothÃ¨que - Vault.gg{% endblock %}

{% block content %}

<!-- Messages flash -->
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div style="padding: 16px; border-radius: 8px; margin-bottom: 16px; 
            {% if label == 'success' %}background: rgba(16, 185, 129, 0.2); border: 1px solid rgba(16, 185, 129, 0.3); color: #10B981;{% endif %}
            {% if label == 'error' %}background: rgba(239, 68, 68, 0.2); border: 1px solid rgba(239, 68, 68, 0.3); color: #EF4444;{% endif %}
            {% if label == 'warning' %}background: rgba(245, 158, 11, 0.2); border: 1px solid rgba(245, 158, 11, 0.3); color: #F59E0B;{% endif %}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div style="margin-bottom: 24px;">
    <h1 style="font-size: 32px; font-weight: 900; margin-bottom: 8px; display: flex; align-items: center; gap: 12px;">
        <i data-lucide="library" style="width: 36px; height: 36px; color: #6366F1;"></i>
        Ma BibliothÃ¨que
    </h1>
    <p style="color: #94A3B8;">GÃ©rez votre collection de jeux vidÃ©o</p>
</div>

<!-- Filtres -->
<div class="glass" style="padding: 20px; margin-bottom: 24px;">
    <form method="get" action="{{ path('app_home') }}">
        <div style="display: flex; gap: 12px; align-items: center; flex-wrap: wrap;">
            <!-- Filtre par statut -->
            <div style="flex: 1; min-width: 200px;">
                <label style="display: block; font-size: 12px; font-weight: 600; color: #94A3B8; margin-bottom: 6px; text-transform: uppercase;">
                    <i data-lucide="filter" style="width: 14px; height: 14px; display: inline-block; vertical-align: middle;"></i>
                    Statut
                </label>
                <select name="status" style="width: 100%; background: rgba(30, 41, 59, 0.8); border: 1px solid rgba(99, 102, 241, 0.3); border-radius: 6px; padding: 8px 12px; color: #F1F5F9; cursor: pointer;">
                    <option value="all" {% if statusFilter == 'all' %}selected{% endif %}>ðŸ“š Tous les statuts</option>
                    <option value="backlog" {% if statusFilter == 'backlog' %}selected{% endif %}>ðŸ“š Backlog</option>
                    <option value="in_progress" {% if statusFilter == 'in_progress' %}selected{% endif %}>ðŸŽ® En cours</option>
                    <option value="completed" {% if statusFilter == 'completed' %}selected{% endif %}>âœ… TerminÃ©</option>
                </select>
            </div>

            <!-- Filtre par genre -->
            <div style="flex: 1; min-width: 200px;">
                <label style="display: block; font-size: 12px; font-weight: 600; color: #94A3B8; margin-bottom: 6px; text-transform: uppercase;">
                    <i data-lucide="tag" style="width: 14px; height: 14px; display: inline-block; vertical-align: middle;"></i>
                    Genre
                </label>
                <select name="genre" style="width: 100%; background: rgba(30, 41, 59, 0.8); border: 1px solid rgba(99, 102, 241, 0.3); border-radius: 6px; padding: 8px 12px; color: #F1F5F9; cursor: pointer;">
                    <option value="all" {% if genreFilter == 'all' %}selected{% endif %}>ðŸŽ¯ Tous les genres</option>
                    {% for genre in allGenres %}
                        <option value="{{ genre }}" {% if genreFilter == genre %}selected{% endif %}>{{ genre }}</option>
                    {% endfor %}
                </select>
            </div>

            <!-- Boutons -->
            <div style="display: flex; gap: 8px; align-items: flex-end;">
                <button type="submit" style="background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%); color: white; padding: 8px 20px; border-radius: 6px; border: none; cursor: pointer; font-weight: 600; display: flex; align-items: center; gap: 6px; white-space: nowrap; transition: all 0.3s ease;" onmouseover="this.style.transform='translateY(-2px)';" onmouseout="this.style.transform='translateY(0)';">
                    <i data-lucide="check" style="width: 16px; height: 16px;"></i>
                    Appliquer
                </button>
                <a href="{{ path('app_home') }}" style="background: rgba(107, 114, 128, 0.2); color: #9CA3AF; padding: 8px 20px; border-radius: 6px; border: 1px solid rgba(107, 114, 128, 0.3); text-decoration: none; font-weight: 600; display: flex; align-items: center; gap: 6px; white-space: nowrap; transition: all 0.3s ease;" onmouseover="this.style.background='rgba(107, 114, 128, 0.3)';" onmouseout="this.style.background='rgba(107, 114, 128, 0.2)';">
                    <i data-lucide="x" style="width: 16px; height: 16px;"></i>
                    RÃ©initialiser
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Compteur de rÃ©sultats -->
{% if statusFilter != 'all' or genreFilter != 'all' %}
    <div style="margin-bottom: 20px; padding: 12px 16px; background: rgba(99, 102, 241, 0.1); border: 1px solid rgba(99, 102, 241, 0.2); border-radius: 8px; display: flex; align-items: center; gap: 8px;">
        <i data-lucide="info" style="width: 18px; height: 18px; color: #6366F1;"></i>
        <span style="color: #6366F1; font-weight: 600; font-size: 14px;">
            {{ userGames|length }} jeu{% if userGames|length > 1 %}x{% endif %} trouvÃ©{% if userGames|length > 1 %}s{% endif %} avec les filtres actifs
        </span>
    </div>
{% endif %}

{% if userGames|length > 0 %}
    <!-- Grille de jeux -->
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px;">
        {% for userGame in userGames %}
            {% set game = userGame.game %}
            <div class="glass" style="position: relative; padding: 16px; transition: all 0.3s ease;">
                
                <!-- Bouton Favori -->
                <form method="post" action="{{ path('app_home_toggle_favorite', {'id': userGame.id}) }}" style="position: absolute; top: 12px; right: 12px; z-index: 10;">
                    <button type="submit" style="background: rgba(30, 41, 59, 0.9); backdrop-filter: blur(10px); border: 1px solid rgba(99, 102, 241, 0.3); border-radius: 50%; width: 44px; height: 44px; display: flex; align-items: center; justify-content: center; cursor: pointer; transition: all 0.3s ease; border: none; {% if userGame.isFavorite %}background: rgba(239, 68, 68, 0.2); border: 1px solid rgba(239, 68, 68, 0.4);{% endif %}" onmouseover="this.style.transform='scale(1.15)';" onmouseout="this.style.transform='scale(1)';">
                        <i data-lucide="heart" style="width: 24px; height: 24px; {% if userGame.isFavorite %}color: #EF4444; fill: #EF4444; stroke: #EF4444;{% else %}color: #94A3B8; stroke: #94A3B8; fill: none;{% endif %}"></i>
                    </button>
                </form>

                <!-- Image du jeu -->
                {% if game.backgroundImage %}
                    <img 
                        src="{{ game.backgroundImage }}" 
                        alt="{{ game.name }}"
                        style="width: 100%; height: 150px; object-fit: cover; border-radius: 8px; margin-bottom: 12px;"
                    >
                {% else %}
                    <div style="width: 100%; height: 150px; background: rgba(99, 102, 241, 0.2); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-bottom: 12px;">
                        <i data-lucide="gamepad-2" style="width: 48px; height: 48px; color: #6366F1;"></i>
                    </div>
                {% endif %}

                <!-- Titre -->
                <h3 style="font-size: 16px; font-weight: 700; color: #F1F5F9; margin-bottom: 8px;">
                    {{ game.name }}
                </h3>

                <!-- Note et Statut -->
                <div style="display: flex; gap: 8px; margin-bottom: 8px; flex-wrap: wrap;">
                    <!-- Note -->
                    {% if game.rating %}
                        <span style="background: rgba(245, 158, 11, 0.2); color: #F59E0B; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600; display: flex; align-items: center; gap: 4px;">
                            <i data-lucide="star" style="width: 12px; height: 12px; fill: #F59E0B;"></i>
                            {{ game.rating }}/5
                        </span>
                    {% endif %}

                    <!-- Statut -->
                    {% if userGame.status == 'backlog' %}
                        <span style="background: rgba(107, 114, 128, 0.2); color: #9CA3AF; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600; display: flex; align-items: center; gap: 4px;">
                            <i data-lucide="clock" style="width: 12px; height: 12px;"></i>
                            Backlog
                        </span>
                    {% elseif userGame.status == 'in_progress' %}
                        <span style="background: rgba(245, 158, 11, 0.2); color: #F59E0B; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600; display: flex; align-items: center; gap: 4px;">
                            <i data-lucide="play-circle" style="width: 12px; height: 12px;"></i>
                            En cours
                        </span>
                    {% elseif userGame.status == 'completed' %}
                        <span style="background: rgba(16, 185, 129, 0.2); color: #10B981; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600; display: flex; align-items: center; gap: 4px;">
                            <i data-lucide="check-circle" style="width: 12px; height: 12px;"></i>
                            TerminÃ©
                        </span>
                    {% endif %}
                </div>

                <!-- Date de sortie et ajoutÃ© le -->
                <div style="color: #94A3B8; font-size: 12px; margin-bottom: 12px;">
                    {% if game.released %}
                        <div style="display: flex; align-items: center; gap: 4px;">
                            <i data-lucide="calendar" style="width: 12px; height: 12px;"></i>
                            Sortie : {{ game.released|date('Y') }}
                        </div>
                    {% endif %}
                    <div style="display: flex; align-items: center; gap: 4px;">
                        <i data-lucide="plus-circle" style="width: 12px; height: 12px;"></i>
                        AjoutÃ© le {{ userGame.addedAt|date('d/m/Y') }}
                    </div>
                </div>

                <!-- Genres -->
                {% if game.genres %}
                    <div style="margin-bottom: 12px;">
                        {% for genre in game.genres %}
                            <span style="background: rgba(99, 102, 241, 0.1); color: #6366F1; padding: 2px 6px; border-radius: 4px; font-size: 11px; margin-right: 4px; display: inline-block; margin-bottom: 4px;">
                                {{ genre }}
                            </span>
                        {% endfor %}
                    </div>
                {% endif %}

                <!-- Actions -->
                <div style="display: flex; gap: 8px;">
                    <!-- Changer le statut -->
                    <form method="post" action="{{ path('app_home_change_status', {'id': userGame.id}) }}" style="flex: 1; margin: 0;">
                        <select 
                            name="status" 
                            onchange="this.form.submit()"
                            style="width: 100%; background: rgba(99, 102, 241, 0.2); color: #6366F1; padding: 8px; border-radius: 6px; border: 1px solid rgba(99, 102, 241, 0.3); cursor: pointer; font-size: 12px; font-weight: 600;"
                        >
                            <option value="backlog" {% if userGame.status == 'backlog' %}selected{% endif %}>ðŸ“š Backlog</option>
                            <option value="in_progress" {% if userGame.status == 'in_progress' %}selected{% endif %}>ðŸŽ® En cours</option>
                            <option value="completed" {% if userGame.status == 'completed' %}selected{% endif %}>âœ… TerminÃ©</option>
                        </select>
                    </form>
                    
                    <!-- Bouton Supprimer -->
                    <form method="post" action="{{ path('app_home_delete_game', {'id': userGame.id}) }}" style="margin: 0;" onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir retirer Â« {{ game.name }} Â» de votre bibliothÃ¨que ?');">
                        <button type="submit" style="background: rgba(239, 68, 68, 0.2); color: #EF4444; padding: 8px 12px; border-radius: 6px; border: 1px solid rgba(239, 68, 68, 0.3); cursor: pointer; font-weight: 600; display: flex; align-items: center; justify-content: center; gap: 6px; font-size: 12px; transition: all 0.3s ease;" onmouseover="this.style.background='rgba(239, 68, 68, 0.3)';" onmouseout="this.style.background='rgba(239, 68, 68, 0.2)';">
                            <i data-lucide="trash-2" style="width: 14px; height: 14px;"></i>
                            Supprimer
                        </button>
                    </form>
                </div>

            </div>
        {% endfor %}
    </div>
{% else %}
    <!-- BibliothÃ¨que vide -->
    <div class="glass" style="padding: 48px; text-align: center;">
        <i data-lucide="library" style="width: 64px; height: 64px; color: #6366F1; margin: 0 auto 16px;"></i>
        <p style="color: #94A3B8; font-size: 18px; margin-bottom: 16px;">
            {% if statusFilter != 'all' or genreFilter != 'all' %}
                Aucun jeu ne correspond aux filtres sÃ©lectionnÃ©s.
            {% else %}
                Votre bibliothÃ¨que est vide pour le moment.
            {% endif %}
        </p>
        <p style="color: #94A3B8; margin-bottom: 24px;">
            {% if statusFilter != 'all' or genreFilter != 'all' %}
                Essayez de modifier vos filtres ou ajoutez de nouveaux jeux !
            {% else %}
                Utilisez la barre de recherche pour ajouter vos premiers jeux !
            {% endif %}
        </p>
        <a 
            href="{% if statusFilter != 'all' or genreFilter != 'all' %}{{ path('app_home') }}{% else %}{{ path('app_search') }}{% endif %}"
            style="display: inline-flex; align-items: center; gap: 8px; background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%); color: white; padding: 12px 24px; border-radius: 8px; font-weight: 600; text-decoration: none; transition: all 0.3s ease;"
            onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 10px 20px rgba(99, 102, 241, 0.4)';"
            onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';"
        >
            {% if statusFilter != 'all' or genreFilter != 'all' %}
                <i data-lucide="x" style="width: 20px; height: 20px;"></i>
                RÃ©initialiser les filtres
            {% else %}
                <i data-lucide="search" style="width: 20px; height: 20px;"></i>
                Rechercher des jeux
            {% endif %}
        </a>
    </div>
{% endif %}

{% endblock %}