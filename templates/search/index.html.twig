{% extends 'base_app.html.twig' %}

{% block title %}Rechercher un jeu - Vault.gg{% endblock %}

{% block content %}

<!-- Messages flash -->
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div data-flash
            class="p-4 rounded-lg mb-4
            {% if label == 'success' %}bg-green-500/20 border border-green-500/30 text-green-400{% endif %}
            {% if label == 'error' %}bg-red-500/20 border border-red-500/30 text-red-400{% endif %}
            {% if label == 'warning' %}bg-amber-500/20 border border-amber-500/30 text-amber-400{% endif %}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<!-- Affichage erreur API -->
{% if error %}
    <div class="px-4 py-3 rounded-lg mb-4 bg-red-500/20 border border-red-500/30 text-red-400 flex items-center gap-2">
        <i data-lucide="alert-triangle" class="w-5 h-5"></i>
        <span>{{ error }}</span>
    </div>
{% endif %}

<!-- Titre -->
<div class="mb-6">
    <h1 class="text-3xl font-black mb-2 flex items-center gap-3">
        <i data-lucide="search" class="w-9 h-9 text-indigo-500"></i>
        Rechercher un jeu
    </h1>
    <p class="text-slate-400">Trouvez des jeux à ajouter à votre bibliothèque</p>
</div>

<!-- Formulaire de recherche -->
<div class="glass rounded-2xl p-4 md:p-6 mb-6">
    <form id="search-form" method="get" action="{{ path('app_search') }}">
        <div class="flex gap-2 md:gap-3 items-center">
            
            <!-- Input -->
            <div class="relative flex-1">
                <i
                    data-lucide="search"
                    class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400"
                ></i>

                <input
                    type="text"
                    name="q"
                    value="{{ query }}"
                    placeholder="Rechercher un jeu…"
                    class="w-full px-4 py-3 pl-11 rounded-lg
                        bg-white dark:bg-slate-800/60
                        border border-slate-300 dark:border-indigo-500/30
                        text-slate-900 dark:text-slate-100
                        placeholder-slate-400 dark:placeholder-slate-500
                        focus:outline-none focus:border-indigo-500
                        focus:ring-4 focus:ring-indigo-500/20
                        transition-all"
                    required
                    autofocus
                >
            </div>
            
            <!-- Bouton Rechercher - Responsive -->
            <button
                type="submit"
                class="bg-gradient-to-br from-indigo-500 to-violet-500 text-white px-4 md:px-8 py-3 rounded-lg font-semibold flex items-center justify-center gap-2 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-indigo-500/40 transition-all shrink-0"
            >
                <i data-lucide="search" class="w-5 h-5"></i>
                <span class="hidden md:inline">Rechercher</span>
            </button>
            
        </div>
    </form>
</div>

<section id="search-loader" class="flex items-end gap-2 justify-center my-6 hidden">
    <span class="w-3 h-8 bg-indigo-500 rounded animate-bounce" style="animation-delay: 0s;"></span>
    <span class="w-3 h-8 bg-indigo-600 rounded animate-bounce" style="animation-delay: 0.15s;"></span>
    <span class="w-3 h-8 bg-indigo-700 rounded animate-bounce" style="animation-delay: 0.3s;"></span>
</section>

<!-- Résultats -->
{% if query %}
    
    <!-- Info résultats -->
    <div class="mb-5 px-4 py-3 bg-indigo-500/10 border border-indigo-500/20 rounded-xl flex items-center gap-3">
        <i data-lucide="list" class="w-5 h-5 text-indigo-400"></i>
        <span class="text-indigo-400 font-semibold">
            {% if results|length > 0 %}
                {{ results|length }} jeu{% if results|length > 1 %}x{% endif %} trouvé{% if results|length > 1 %}s{% endif %} pour "{{ query }}"
            {% else %}
                Aucun résultat pour "{{ query }}"
            {% endif %}
        </span>
    </div>

    {% if results|length > 0 %}
        
        <!-- Grille de jeux -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2 2xl:grid-cols-3 gap-5 mb-10">
            {% for game in results %}
                <div class="glass rounded-2xl p-4 hover:-translate-y-1 transition-all group">
                    
                    <!-- Image -->
                    {% if game.background_image %}
                        <img
                            src="{{ game.background_image }}"
                            alt="{{ game.name }}"
                            class="w-full h-36 object-cover rounded-lg mb-3"
                        >
                    {% else %}
                        <div class="w-full h-36 bg-indigo-500/20 rounded-lg flex items-center justify-center mb-3">
                            <i data-lucide="gamepad-2" class="w-12 h-12 text-indigo-500"></i>
                        </div>
                    {% endif %}

                    <!-- Titre -->
                    <h3 class="text-base font-bold text-slate-100 mb-2 line-clamp-2">
                        {{ game.name }}
                    </h3>

                    <!-- Badges -->
                    <div class="flex gap-2 mb-3 flex-wrap">
                        {% if game.rating %}
                            <span class="bg-amber-500/20 text-amber-400 px-2 py-1 rounded text-xs font-semibold flex items-center gap-1">
                                <i data-lucide="star" class="w-3 h-3 fill-amber-400"></i>
                                {{ game.rating }}/5
                            </span>
                        {% endif %}
                        {% if game.released %}
                            <span class="bg-indigo-500/10 text-indigo-400 px-2 py-1 rounded text-xs font-semibold flex items-center gap-1">
                                <i data-lucide="calendar" class="w-3 h-3"></i>
                                {{ game.released|date('Y') }}
                            </span>
                        {% endif %}
                    </div>

                    <!-- Genres -->
                    {% if game.genres %}
                        <div class="mb-3 flex flex-wrap gap-1">
                            {% for genre in game.genres %}
                                <span class="bg-violet-500/10 text-violet-400 px-2 py-0.5 rounded text-xs">
                                    {{ genre.name }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}

                    <!-- Bouton Ajouter -->
                    <form method="post" action="{{ path('app_search_add', {'rawgId': game.id}) }}">
                        <button
                            type="submit"
                            class="w-full bg-indigo-500/20 text-indigo-400 py-2.5 rounded-lg border border-indigo-500/30 font-semibold hover:bg-indigo-500/30 hover:-translate-y-0.5 transition-all flex items-center justify-center gap-2"
                        >
                            <i data-lucide="plus-circle" class="w-4 h-4"></i>
                            <span class="hidden sm:inline">Ajouter à ma bibliothèque</span>
                            <span class="sm:hidden">Ajouter</span>
                        </button>
                    </form>

                    <!-- Bouton Voir les avis -->
                    <a href="{{ path('app_game_reviews', {'rawgId': game.id}) }}" 
                        class="w-full mt-2 bg-violet-500/20 text-violet-400 px-3 py-2 rounded-lg border border-violet-500/30 font-semibold flex items-center justify-center gap-1.5 text-xs hover:bg-violet-500/30 transition-all duration-300">
                        <i data-lucide="message-circle" class="w-3.5 h-3.5"></i>
                        Voir les avis
                    </a>
                    
                </div>
            {% endfor %}
        </div>
        
    {% else %}
        
        <!-- Aucun résultat -->
        <div class="glass rounded-2xl p-12 text-center">
            <i data-lucide="search-x" class="w-16 h-16 text-slate-600 mx-auto mb-4"></i>
            <p class="text-slate-400 text-lg mb-2">
                Aucun jeu trouvé pour "{{ query }}"
            </p>
            <p class="text-slate-500 text-sm">
                Essayez avec un autre nom ou vérifiez l'orthographe
            </p>
        </div>
        
    {% endif %}
    
{% else %}
    
    <!-- Suggestions avant recherche -->
    <div class="glass rounded-2xl p-12 text-center">
        <i data-lucide="gamepad-2" class="w-16 h-16 text-indigo-500 mx-auto mb-4"></i>
        <p class="text-slate-400 text-lg mb-2">
            Commencez à rechercher des jeux
        </p>
        <p class="text-slate-500 text-sm mb-5">
            Tapez le nom d'un jeu dans la barre de recherche ci-dessus
        </p>
        <div class="flex flex-wrap gap-2 justify-center">
            <span class="bg-indigo-500/10 text-indigo-400 px-3 py-1.5 rounded-lg text-sm">Exemple: Elden Ring</span>
            <span class="bg-indigo-500/10 text-indigo-400 px-3 py-1.5 rounded-lg text-sm">Exemple: GTA V</span>
            <span class="bg-indigo-500/10 text-indigo-400 px-3 py-1.5 rounded-lg text-sm">Exemple: Zelda</span>
        </div>
    </div>
    
{% endif %}

{% endblock %}
