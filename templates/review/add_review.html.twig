{% extends 'base_app.html.twig' %}

{% block title %}Donner mon avis sur {{ game.name }} - Vault.gg{% endblock %}

{% block content %}

<!-- Header -->
<header class="mb-6">
    <a href="{{ path('app_game_reviews', {'id': game.id}) }}" class="inline-flex items-center gap-2 text-indigo-400 hover:text-indigo-300 mb-4">
        <i data-lucide="arrow-left" class="w-4 h-4"></i>
        Retour aux avis
    </a>
    <h1 class="text-3xl font-black mb-2 flex items-center gap-3">
        <i data-lucide="edit" class="w-9 h-9 text-indigo-500"></i>
        Donner mon avis
    </h1>
    <p class="text-slate-400">Partagez votre expérience sur {{ game.name }}</p>
</header>

<!-- Formulaire -->
<div class="glass rounded-2xl p-6 max-w-3xl">
    <form method="post">
        
        <!-- Note -->
        <div class="mb-6">
            <label class="block font-semibold mb-3 text-slate-100">Note *</label>
            <div class="flex gap-2">
                {% for i in 1..5 %}
                    <input type="radio" name="rating" value="{{ i }}" id="rating-{{ i }}" class="hidden peer/rating-{{ i }}" required>
                    <label for="rating-{{ i }}" class="cursor-pointer peer-checked/rating-{{ i }}:text-amber-500 text-slate-600 hover:text-amber-400 transition-colors">
                        <i data-lucide="star" class="w-8 h-8 peer-checked/rating-{{ i }}:fill-amber-500"></i>
                    </label>
                {% endfor %}
            </div>
        </div>

        <!-- Titre -->
        <div class="mb-6">
            <label for="title" class="block font-semibold mb-2 text-slate-100">Titre de votre avis *</label>
            <input type="text" 
                   name="title" 
                   id="title" 
                   class="w-full px-4 py-3 rounded-lg bg-slate-800/60 border border-indigo-500/30 text-slate-100 placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20"
                   placeholder="Ex: Un chef-d'œuvre du jeu vidéo"
                   required>
        </div>

        <!-- Contenu -->
        <div class="mb-6">
            <label for="content" class="block font-semibold mb-2 text-slate-100">Votre avis *</label>
            <textarea name="content" 
                      id="content" 
                      rows="8"
                      class="w-full px-4 py-3 rounded-lg bg-slate-800/60 border border-indigo-500/30 text-slate-100 placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20"
                      placeholder="Partagez votre expérience, ce que vous avez aimé ou moins aimé..."
                      required></textarea>
        </div>

        <!-- Recommandé -->
        <div class="mb-6">
            <label class="flex items-center gap-3 cursor-pointer">
                <input type="checkbox" 
                       name="isRecommended" 
                       class="w-5 h-5 rounded text-indigo-500 focus:ring-2 focus:ring-indigo-500/20">
                <span class="text-slate-100 font-semibold">Je recommande ce jeu</span>
            </label>
        </div>

        <!-- Boutons -->
        <div class="flex gap-3">
            <button type="submit" 
                    class="bg-gradient-to-br from-indigo-500 to-violet-500 text-white px-6 py-3 rounded-lg font-semibold hover:-translate-y-0.5 transition-all flex items-center gap-2">
                <i data-lucide="send" class="w-5 h-5"></i>
                Publier mon avis
            </button>
            <a href="{{ path('app_game_reviews', {'id': game.id}) }}" 
               class="bg-slate-500/20 text-slate-400 px-6 py-3 rounded-lg border border-slate-500/30 font-semibold hover:bg-slate-500/30 transition-all">
                Annuler
            </a>
        </div>
    </form>
</div>

{% endblock %}
