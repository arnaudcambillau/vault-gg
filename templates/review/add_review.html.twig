{% extends 'base_app.html.twig' %}

{% block title %}Donner mon avis sur {{ game.name }} - Vault.gg{% endblock %}

{% block content %}

<!-- Messages flash -->
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div data-flash
            class="p-4 rounded-lg mb-4
            {% if label == 'success' %}bg-green-500/20 border border-green-500/30 text-green-400{% endif %}
            {% if label == 'error' %}bg-red-500/20 border border-red-500/30 text-red-400{% endif %}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}


<!-- Header -->
<header class="mb-6">
    <a href="{{ path('app_game_reviews', {'id': game.id}) }}" class="inline-flex items-center gap-2 text-indigo-400 hover:text-indigo-300 mb-4">
        <i data-lucide="arrow-left" class="w-4 h-4"></i>
        Retour aux avis
    </a>
    <h1 class="text-3xl font-black mb-2 flex items-center gap-3">
        <i data-lucide="edit" class="w-9 h-9 text-indigo-500"></i>
        Donner mon avis
    </h1>
    <p class="text-slate-400">Partagez votre expérience sur {{ game.name }}</p>
</header>

<!-- Formulaire -->
<div class="glass rounded-2xl p-6 max-w-3xl">
    <form method="POST" action="{{ path('app_review_add') }}">
        
        <!-- ✅ CHAMP CACHÉ RAWGID -->
        <input type="hidden" name="rawgId" value="{{ game.id }}">
        
        <!-- Note -->
        <div class="mb-6">
            <label class="block font-semibold mb-3 text-slate-100">Note *</label>
            <div class="flex gap-2">
                {% for i in 1..5 %}
                    <label class="cursor-pointer group">
                        <input type="radio" 
                               name="rating" 
                               value="{{ i }}" 
                               class="hidden peer"
                               {% if i == 4 %}checked{% endif %}
                               required>
                        <div class="w-12 h-12 flex items-center justify-center rounded-lg border-2 border-slate-600 peer-checked:border-amber-500 peer-checked:bg-amber-500/20 hover:border-amber-500/50 transition-all">
                            <i data-lucide="star" class="w-6 h-6 text-slate-600 peer-checked:text-amber-500 group-hover:text-amber-400"></i>
                        </div>
                    </label>
                {% endfor %}
            </div>
        </div>

        <!-- Titre -->
        <div class="mb-6">
            <label for="title" class="block font-semibold mb-2 text-slate-100">Titre de votre avis *</label>
            <input type="text" 
                   name="title" 
                   id="title" 
                   class="w-full px-4 py-3 rounded-lg bg-slate-800/60 border border-indigo-500/30 text-slate-100 placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20"
                   placeholder="Ex: Un chef-d'œuvre du jeu vidéo"
                   required
                   maxlength="100">
        </div>

        <!-- ✅ COMMENTAIRE (pas "content") -->
        <div class="mb-6">
            <label for="comment" class="block font-semibold mb-2 text-slate-100">Votre avis *</label>
            <textarea name="comment" 
                      id="comment" 
                      rows="8"
                      class="w-full px-4 py-3 rounded-lg bg-slate-800/60 border border-indigo-500/30 text-slate-100 placeholder-slate-400 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 resize-none"
                      placeholder="Partagez votre expérience, ce que vous avez aimé ou moins aimé..."
                      required></textarea>
        </div>

        <!-- Boutons -->
        <div class="flex gap-3">
            <button type="submit" 
                    class="bg-gradient-to-br from-indigo-500 to-violet-500 text-white px-6 py-3 rounded-lg font-semibold hover:-translate-y-0.5 transition-all flex items-center gap-2">
                <i data-lucide="send" class="w-5 h-5"></i>
                Publier mon avis
            </button>
            <a href="{{ path('app_game_reviews', {'id': game.id}) }}" 
               class="bg-slate-500/20 text-slate-400 px-6 py-3 rounded-lg border border-slate-500/30 font-semibold hover:bg-slate-500/30 transition-all">
                Annuler
            </a>
        </div>
    </form>
</div>

{% endblock %}
