{% extends 'base.html.twig' %}

{% block title %}Connexion - Vault.gg{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center p-6">

    <!-- Card -->
    <div class="w-full max-w-md p-10 glass rounded-2xl">
        
        <!-- Logo & Titre -->
        <h1 class="text-3xl font-black text-center mb-2 bg-gradient-to-r from-indigo-500 to-violet-500 bg-clip-text text-transparent">
            ðŸŽ® Vault.gg
        </h1>
        <p class="text-center text-slate-400 mb-8">Se connecter</p>
        
        <!-- Erreur -->
        {% if error %}
            <div class="bg-red-500/20 border border-red-500/30 text-red-400 px-4 py-3 rounded-lg mb-5">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        
        <!-- Formulaire -->
        <form method="post" class="space-y-5">
            
            <!-- Email -->
            <div>
                <label for="inputEmail" class="block font-semibold mb-2 text-slate-200">Email</label>
                <input type="email" 
                    value="{{ last_username }}" 
                    name="email" 
                    id="inputEmail" 
                    class="w-full px-4 py-3 rounded-lg bg-slate-800/60 border border-indigo-500/30 
                        text-slate-100 placeholder-slate-500 focus:outline-none focus:border-indigo-500 
                        focus:ring-4 focus:ring-indigo-500/20 transition-all" 
                    autocomplete="email" 
                    required 
                    autofocus>
            </div>
            
            <!-- Mot de passe -->
            <div>
                <label for="inputPassword" class="block font-semibold mb-2 text-slate-200">Mot de passe</label>
                <input type="password" 
                    name="password" 
                    id="inputPassword" 
                    class="w-full px-4 py-3 rounded-lg bg-slate-800/60 border border-indigo-500/30 
                        text-slate-100 placeholder-slate-500 focus:outline-none focus:border-indigo-500 
                        focus:ring-4 focus:ring-indigo-500/20 transition-all" 
                    autocomplete="current-password" 
                    required>
            </div>
            
            <!-- CSRF Token -->
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <!-- Remember me -->
            <div class="flex items-center gap-2">
                <input type="checkbox" 
                    name="_remember_me" 
                    id="remember_me"
                    class="w-4 h-4 rounded text-indigo-500 focus:ring-2 focus:ring-indigo-500/20">
                <label for="remember_me" class="text-slate-400 text-sm">Se souvenir de moi</label>
            </div>
            
            <!-- Bouton -->
            <button type="submit" 
                    class="w-full py-3 rounded-lg font-semibold bg-gradient-to-r from-indigo-500 to-violet-500 
                        text-white shadow-lg hover:-translate-y-0.5 hover:shadow-indigo-500/40 
                        transition-all duration-300">
                Se connecter
            </button>
        </form>
        
        <!-- Lien inscription -->
        <div class="text-center mt-6 text-slate-400">
            Pas encore de compte ? 
            <a href="{{ path('app_register') }}" class="text-indigo-500 font-semibold hover:underline">S'inscrire</a>
        </div>
    </div>

</div>
{% endblock %}
