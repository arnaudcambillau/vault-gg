{% extends 'base_app.html.twig' %}

{% block title %}Statistiques - Vault.gg{% endblock %}

{% block content %}

<!-- Titre -->
<div class="mb-6">
    <h1 class="text-3xl font-black mb-2 flex items-center gap-3">
        <i data-lucide="bar-chart-2" class="w-9 h-9 text-indigo-500"></i>
        Statistiques
    </h1>
    <p class="text-slate-400">Analysez votre collection de jeux vidéo</p>
</div>

<!-- Stats générales (5 cartes) -->
<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-5 gap-3 md:gap-4 mb-6">

    <!-- Total jeux -->
    <div class="glass rounded-2xl p-4">
        <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-indigo-500/20 rounded-lg flex items-center justify-center shrink-0">
                <i data-lucide="library" class="w-5 h-5 text-indigo-500"></i>
            </div>
            <div>
                <div class="text-2xl font-black text-slate-100">{{ stats.total }}</div>
                <div class="text-xs text-slate-400 uppercase">Total jeux</div>
            </div>
        </div>
    </div>

    <!-- En cours -->
    <div class="glass rounded-2xl p-4">
        <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-amber-500/20 rounded-lg flex items-center justify-center shrink-0">
                <i data-lucide="play-circle" class="w-5 h-5 text-amber-500"></i>
            </div>
            <div>
                <div class="text-2xl font-black text-amber-500">{{ stats.in_progress }}</div>
                <div class="text-xs text-slate-400 uppercase">En cours</div>
            </div>
        </div>
    </div>

    <!-- Terminés -->
    <div class="glass rounded-2xl p-4">
        <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-emerald-500/20 rounded-lg flex items-center justify-center shrink-0">
                <i data-lucide="check-circle" class="w-5 h-5 text-emerald-500"></i>
            </div>
            <div>
                <div class="text-2xl font-black text-emerald-500">{{ stats.completed }}</div>
                <div class="text-xs text-slate-400 uppercase">Terminés</div>
            </div>
        </div>
    </div>

    <!-- Backlog -->
    <div class="glass rounded-2xl p-4">
        <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-slate-500/20 rounded-lg flex items-center justify-center shrink-0">
                <i data-lucide="clock" class="w-5 h-5 text-slate-400"></i>
            </div>
            <div>
                <div class="text-2xl font-black text-slate-400">{{ stats.backlog }}</div>
                <div class="text-xs text-slate-400 uppercase">À commencer</div>
            </div>
        </div>
    </div>

    <!-- Favoris -->
    <div class="glass rounded-2xl p-4">
        <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center shrink-0">
                <i data-lucide="heart" class="w-5 h-5 text-red-500"></i>
            </div>
            <div>
                <div class="text-2xl font-black text-red-500">{{ stats.favorites }}</div>
                <div class="text-xs text-slate-400 uppercase">Favoris</div>
            </div>
        </div>
    </div>
    
</div>

<!-- Taux de complétion -->
<div class="glass rounded-2xl p-6 mb-6">
    <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
        <i data-lucide="trending-up" class="w-5 h-5 text-indigo-500"></i>
        Taux de complétion
    </h2>
    <div class="flex items-center gap-4">
        <div class="flex-1">
            <div class="bg-slate-800/60 h-6 rounded-full overflow-hidden">
                <div 
                    class="bg-gradient-to-r from-emerald-500 to-emerald-600 h-full transition-all duration-500 ease-out"
                    style="width: {{ completionRate }}%"
                ></div>
            </div>
        </div>
        <div class="text-2xl font-black text-emerald-500 min-w-[60px] text-right">
            {{ completionRate }}%
        </div>
    </div>
    <p class="text-slate-400 text-sm mt-2">
        Vous avez terminé {{ stats.completed }} jeu{% if stats.completed > 1 %}x{% endif %} sur {{ stats.total }}
    </p>
</div>

<!-- 2 colonnes : Top genres + Top jeux -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    
    <!-- Top 5 genres -->
    <div class="glass rounded-2xl p-6">
        <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
            <i data-lucide="tag" class="w-5 h-5 text-violet-500"></i>
            Top 5 Genres
        </h2>
        {% if topGenres|length > 0 %}
            <div class="space-y-3">
                {% for genre, count in topGenres %}
                    <div>
                        <div class="flex justify-between mb-1.5">
                            <span class="font-semibold text-slate-100">{{ genre }}</span>
                            <span class="font-bold text-violet-400">{{ count }}</span>
                        </div>
                        <div class="bg-slate-800/60 h-2 rounded-full overflow-hidden">
                            <div 
                                class="bg-gradient-to-r from-violet-500 to-indigo-500 h-full"
                                style="width: {{ (count / stats.total * 100)|round }}%"
                            ></div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-slate-400 text-center py-6">
                Aucune donnée de genre disponible
            </p>
        {% endif %}
    </div>

    <!-- Top 3 jeux les mieux notés -->
    <div class="glass rounded-2xl p-6">
        <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
            <i data-lucide="award" class="w-5 h-5 text-amber-500"></i>
            Top 3 Jeux les mieux notés
        </h2>
        {% if topRatedGames|length > 0 %}
            <div class="space-y-3">
                {% for userGame in topRatedGames %}
                    {% set game = userGame.game %}
                    <div class="flex items-center gap-3 p-3 rounded-lg">
                        {% if game.backgroundImage %}
                            <img 
                                src="{{ game.backgroundImage }}" 
                                alt="{{ game.name }}" 
                                class="w-14 h-14 object-cover rounded-lg shrink-0"
                            >
                        {% else %}
                            <div class="w-14 h-14 bg-indigo-500/20 rounded-lg flex items-center justify-center shrink-0">
                                <i data-lucide="gamepad-2" class="w-6 h-6 text-indigo-500"></i>
                            </div>
                        {% endif %}
                        <div class="flex-1 min-w-0">
                            <div class="font-bold text-slate-100 truncate mb-1">{{ game.name }}</div>
                            <div class="flex items-center gap-1">
                                <i data-lucide="star" class="w-3.5 h-3.5 text-amber-500 fill-amber-500"></i>
                                <span class="font-semibold text-amber-500 text-sm">{{ game.rating }}/5</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-slate-400 text-center py-6">
                Aucun jeu noté dans votre bibliothèque
            </p>
        {% endif %}
    </div>
    
</div>

<!-- Jeux ajoutés par mois (Scrollable sur mobile) -->
<div class="glass rounded-2xl p-6 mb-10">
    <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
        <i data-lucide="calendar" class="w-5 h-5 text-indigo-500"></i>
        Jeux ajoutés (6 derniers mois)
    </h2>
    {% if monthlyStats|length > 0 %}
        
        <!-- Container avec scroll horizontal sur mobile -->
        <div class="overflow-x-auto -mx-6 px-6">
            <div class="flex items-end gap-3 h-52 min-w-[400px]">
                {% set maxCount = max(monthlyStats) %}
                {% for month, count in monthlyStats %}
                    <div class="flex-1 flex flex-col items-center gap-2">
                        <div class="text-center font-bold text-indigo-400 min-h-6">
                            {% if count > 0 %}{{ count }}{% endif %}
                        </div>
                        <div 
                            class="w-full bg-gradient-to-br from-indigo-500 to-violet-500 rounded-t"
                            style="height: {% if maxCount > 0 %}{{ (count / maxCount * 160)|round }}px{% else %}4px{% endif %}; min-height: 4px;"
                        ></div>
                        <div class="text-xs text-slate-400 text-center whitespace-nowrap">{{ month }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
    {% else %}
        <p class="text-slate-400 text-center py-6">
            Aucune donnée disponible
        </p>
    {% endif %}
</div>

{% endblock %}
